{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "domainName": {
            "type": "string",
            "metadata": {
                "description": "The main domain for the DNS zone"
            }
        },
        "cdnProfileName": {
           "type": "string",
           "metadata": {
                "description": "The name to give the CDN profile"
            }
        }
    },
    "variables": {
        "mx": "[concat(replace(parameters('domainName'),'.','-'),'.mail.protection.outlook.com')]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/dnsZones",
            "apiVersion": "2018-05-01",
            "name": "[parameters('domainName')]",
            "location": "global",
            "properties": {},
            "resources": [
                {
                    "type": "CNAME",
                    "apiVersion": "2018-05-01",
                    "name": "autodiscover",
                    "location": "global",
                    "properties": {
                        "TTL": 3600,
                        "CNAMERecord": {
                            "cname": "autodiscover.outlook.com"
                        }
                    },
                    "dependsOn": [
                        "[concat('Microsoft.Network/dnsZones','/',parameters('domainName'))]"
                    ]
                },
                {
                    "type": "CNAME",
                    "apiVersion": "2018-05-01",
                    "name": "msoid",
                    "location": "global",
                    "properties": {
                        "TTL": 3600,
                        "CNAMERecord": {
                            "cname": "clientconfig.microsoftonline-p.net"
                        }
                    },
                    "dependsOn": [
                        "[concat('Microsoft.Network/dnsZones','/',parameters('domainName'))]"
                    ]
                },
                {
                    "type": "MX",
                    "apiVersion": "2018-05-01",
                    "name": "@",
                    "location": "global",
                    "properties": {
                        "TTL": 3600,
                        "MXRecords": [
                            {
                                "exchange": "[variables('mx')]",
                                "preference": 0
                            }
                        ]
                    },
                    "dependsOn": [
                        "[concat('Microsoft.Network/dnsZones','/',parameters('domainName'))]"
                    ]
                },
                {
                    "type": "TXT",
                    "name": "@",
                    "apiVersion": "2018-05-01",
                    "properties": {
                        "TTL": 3600,
                        "TXTRecords": [
                            {
                                "value": [
                                    "v=spf1 include:spf.protection.outlook.com -all"
                                ]
                            }
                        ]
                    },
                    "dependsOn": [
                        "[concat('Microsoft.Network/dnsZones','/',parameters('domainName'))]"
                    ]
                }
            ]
        },
        {
            "type": "Microsoft.Cdn/profiles",
            "apiVersion": "2019-04-15",
            "name": "[parameters('cdnProfileName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_Microsoft"
            }
        }
    ],
    "outputs": {}
}