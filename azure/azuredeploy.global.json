{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "domainName": {
            "type": "string",
            "metadata": {
                "description": "The main domain for the DNS zone"
            }
        }
    },
    "variables": {
        "mx": "[concat(replace(parameters('domainName'),'.','-'),'.mail.protection.outlook.com')]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/dnsZones",
            "apiVersion": "2018-05-01",
            "name": "[parameters('domainName')]",
            "location": "global",
            "properties": {
            },
            "resources": [
                {
                    "type": "CNAME",
                    "apiVersion": "2018-05-01",
                    "name": "autodiscover",
                    "location": "global",
                    "properties": {
                        "TTL": 3600,
                        "CNAMERecord": {
                            "cname": "autodiscover.outlook.com"
                        }
                    },
                    "dependsOn": [
                        "[concat('Microsoft.Network/dnsZones','/',parameters('domainName'))]"
                    ]
                },
                {
                    "type": "CNAME",
                    "apiVersion": "2018-05-01",
                    "name": "msoid",
                    "location": "global",
                    "properties": {
                        "TTL": 3600,
                        "CNAMERecord": {
                            "cname": "clientconfig.microsoftonline-p.net"
                        }
                    },
                    "dependsOn": [
                        "[concat('Microsoft.Network/dnsZones','/',parameters('domainName'))]"
                    ]
                },
                {
                    "type": "CNAME",
                    "apiVersion": "2018-05-01",
                    "name": "sip",
                    "location": "global",
                    "properties": {
                        "TTL": 3600,
                        "CNAMERecord": {
                            "cname": "sipdir.online.lync.com"
                        }
                    },
                    "dependsOn": [
                        "[concat('Microsoft.Network/dnsZones','/',parameters('domainName'))]"
                    ]
                },
                {
                    "type": "CNAME",
                    "apiVersion": "2018-05-01",
                    "name": "lyncdiscover",
                    "location": "global",
                    "properties": {
                        "TTL": 3600,
                        "CNAMERecord": {
                            "cname": "webdir.online.lync.com"
                        }
                    },
                    "dependsOn": [
                        "[concat('Microsoft.Network/dnsZones','/',parameters('domainName'))]"
                    ]
                },
                {
                    "type": "CNAME",
                    "apiVersion": "2018-05-01",
                    "name": "enterpriseregistration",
                    "location": "global",
                    "properties": {
                        "TTL": 3600,
                        "CNAMERecord": {
                            "cname": "enterpriseregistration.windows.net"
                        }
                    },
                    "dependsOn": [
                        "[concat('Microsoft.Network/dnsZones','/',parameters('domainName'))]"
                    ]
                },
                {
                    "type": "CNAME",
                    "apiVersion": "2018-05-01",
                    "name": "enterpriseenrollment",
                    "location": "global",
                    "properties": {
                        "TTL": 3600,
                        "CNAMERecord": {
                            "cname": "enterpriseenrollment.manage.microsoft.com"
                        }
                    },
                    "dependsOn": [
                        "[concat('Microsoft.Network/dnsZones','/',parameters('domainName'))]"
                    ]
                },
                {
                    "type": "MX",
                    "apiVersion": "2018-05-01",
                    "name": "@",
                    "location": "global",
                    "properties": {
                        "TTL": 3600,
                        "MXRecords": [
                            {
                                "exchange": "[variables('mx')]",
                                "preference": 0
                            }
                        ]
                    },
                    "dependsOn": [
                        "[concat('Microsoft.Network/dnsZones','/',parameters('domainName'))]"
                    ]
                },
                {
                    "type": "TXT",
                    "name": "@",
                    "apiVersion": "2018-05-01",
                    "properties": {
                        "TTL": 3600,
                        "TXTRecords": [
                            {
                                "value": [
                                    "v=spf1 include:spf.protection.outlook.com -all"
                                ]
                            }
                        ]
                    },
                    "dependsOn": [
                        "[concat('Microsoft.Network/dnsZones','/',parameters('domainName'))]"
                    ]
                },
                {
                    "type": "SRV",
                    "name": "_sipfederationtls._tcp",
                    "apiVersion": "2018-05-01",
                    "properties": {
                        "TTL": 3600,
                        "SRVRecords": [
                            {
                                "port": 5061,
                                "priority": 100,
                                "target": "sipfed.online.lync.com",
                                "weight": 1
                            }
                        ]
                    },
                    "dependsOn": [
                        "[concat('Microsoft.Network/dnsZones','/',parameters('domainName'))]"
                    ]
                },
                {
                    "type": "SRV",
                    "name": "_sip._tls",
                    "apiVersion": "2018-05-01",
                    "properties": {
                        "TTL": 3600,
                        "SRVRecords": [
                            {
                                "port": 443,
                                "priority": 100,
                                "target": "sipdir.online.lync.com",
                                "weight": 1
                            }
                        ]
                    },
                    "dependsOn": [
                        "[concat('Microsoft.Network/dnsZones','/',parameters('domainName'))]"
                    ]
                }
            ]
        }
    ],
    "outputs": {
    }
}